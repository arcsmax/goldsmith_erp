# ===================================================================
# Goldsmith ERP - Environment Configuration
# ===================================================================
# Kopieren Sie diese Datei zu .env und passen Sie die Werte an:
# cp .env.example .env
#
# WICHTIG: .env sollte NIEMALS in Git committed werden!
# ===================================================================

# ===================================================================
# Database Configuration
# ===================================================================
POSTGRES_USER=user
POSTGRES_PASSWORD=pass
POSTGRES_DB=goldsmith
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Vollständige Database URL (wird automatisch generiert, wenn leer)
# Format: postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql+asyncpg://user:pass@db:5432/goldsmith

# Für Migrationen (sync connection)
MIGRATION_DATABASE_URL=postgresql://user:pass@db:5432/goldsmith

# ===================================================================
# Redis Configuration
# ===================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Vollständige Redis URL (wird automatisch generiert, wenn leer)
REDIS_URL=redis://redis:6379/0

# ===================================================================
# Application Security
# ===================================================================
# WICHTIG: Ändern Sie dies in der Produktion!
# Generieren Sie einen sicheren Schlüssel mit:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change_this_to_a_secure_random_string_minimum_32_characters

# JWT Token Gültigkeit in Minuten (Standard: 7 Tage)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===================================================================
# Application Settings
# ===================================================================
APP_NAME=Goldsmith ERP
API_V1_STR=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Debug Mode (true für Development, false für Production)
DEBUG=true

# ===================================================================
# CORS Settings
# ===================================================================
# Komma-separierte Liste erlaubter Origins
# Für Production: Nur spezifische Domains erlauben
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ===================================================================
# S3 / Object Storage (Optional, für zukünftige Features)
# ===================================================================
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=eu-central-1
# S3_BUCKET=goldsmith-erp-storage

# ===================================================================
# Email Configuration (Optional, für zukünftige Features)
# ===================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@goldsmith-erp.com

# ===================================================================
# OAuth2 Configuration (Optional)
# ===================================================================
# OAUTH2_CLIENT_ID=your_oauth2_client_id
# OAUTH2_CLIENT_SECRET=your_oauth2_client_secret

# ===================================================================
# Logging
# ===================================================================
# LOG_LEVEL=INFO
# LOG_FORMAT=json

# ===================================================================
# Development Tools
# ===================================================================
# ENABLE_PROFILER=false
# ENABLE_SWAGGER_UI=true
